@using (Html.BeginForm("Registrar", "Factura", FormMethod.Post, new { id = "form" }))
{
    <div class="box">
        <div class="columns">
            <div class="column">
                <style>      
                    /*Estilos para el autocompletado*/
                    .suggestions > div {
                        padding: 10px;
                        font-size: 15px;
                        background: #808080;
                        color: #fff;
                        border-top: 1px solid #666;
                        cursor: pointer;
                    }

                    .suggestions > div:hover {
