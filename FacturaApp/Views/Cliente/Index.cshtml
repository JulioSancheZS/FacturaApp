@using FacturaApp.Models.ViewModel
@model List<ClienteViewModel>
@{
    ViewBag.Title = "Index";
}

<h2 class="is-size-3 ml-4">Cliente</h2>

<a class="button is-primary ml-4 mb-4" href="@Url.Content("~/Cliente/New")">Nuevo Cliente</a>

<table class="table is-fullwidth">
   <thead>
       <tr>
           <th>ID</th>
           <th>Nombre</th>
           <th>Apellido</th>
           <th>Edad</th>
           <th>Dirección</th>
           <th>Telefono</th>
           <th>Acciones</th>
       </tr>
   </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th>@item.ID</th>
            <td>@item.Nombre</td>
            <td>@item.Apellido</td>
            <td>@item.Edad</td>
            <td>@item.Direccion</td>
            <td>@item.Telefono</td>
            <td>
                <button class="button is-success"
                        onclick="document.location.href='@Url.Content("~/Cliente/Edit/?Id=" + item.ID)'">
                    Editar
                </button>
                <button class="button is-danger"
                        onclick="eliminarCli(@item.ID)">
                    Eliminar
                </button>
            </td>
        </tr>
        }
    </tbody>
</table>

<script>


    //Eliminar
    let URLDELETE = "@Url.Content("~/Cliente/Detele")";

    let eliminarCli = (id) => {

        fetch(URLDELETE, {
            method: "POST",
            body: JSON.stringify({

                ID: id

            }),
            headers: {
                "Accept": "application/json",
                "Content-Type": "application/json"
            }
        }).then((resp) => {
            if (resp.ok)
                resp.text();
            else
                alert("Error al ejecutar :(");
        }).then((data) => {
          
               document.location.href = "@Url.Content("~/Cliente/")";
          
        }).catch(error => {
            console.log(error);
        })

    }

</script>